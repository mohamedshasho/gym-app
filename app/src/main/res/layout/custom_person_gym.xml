<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_card_view_person"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/accent"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_5sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/costom_iv_profile"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/background_iv_profile"
                android:src="@drawable/defult_iv_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/costom_tv_name"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/costom_iv_profile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/costom_tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textSize="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/costom_iv_profile"
                app:layout_constraintTop_toBottomOf="@+id/costom_tv_name" />

            <TextView
                android:id="@+id/costom_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/custom_iv_back"
                app:layout_constraintTop_toBottomOf="@+id/costom_iv_gender" />

            <TextView
                android:id="@+id/costom_tv_propriety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/costom_iv_profile" />

            <TextView
                android:id="@+id/costom_tv_number_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/costom_iv_profile"
                app:layout_constraintTop_toBottomOf="@+id/costom_tv_age" />

            <ImageView
                android:id="@+id/costom_iv_gender"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/custom_tv_id"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_male" />

            <TextView
                android:id="@+id/costom_tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="TextView"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/costom_tv_price" />

            <ImageView
                android:id="@+id/custom_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/custom_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>